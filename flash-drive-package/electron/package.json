{
  "name": "gas-cylinder-dashboard-desktop",
  "version": "1.0.0",
  "description": "Gas Cylinder Dashboard Desktop Application",
  "main": "main.js",
  "homepage": "https://github.com/samuelkimani-g/max-gas-transactions",
  "repository": {
    "type": "git",
    "url": "https://github.com/samuelkimani-g/max-gas-transactions.git"
  },
  "build": {
    "appId": "com.maxgas.dashboard",
    "productName": "Gas Cylinder Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "../dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "samuelkimani-g",
      "repo": "max-gas-transactions"
    }
  },
  "scripts": {
    "dev": "electron main.js",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd .. && npm run build",
    "dist": "npm run build:renderer && electron-builder --publish=never",
    "dist:win": "npm run build:renderer && electron-builder --win --publish=never",
    "publish": "npm run build:renderer && electron-builder --publish=always"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  }
}
